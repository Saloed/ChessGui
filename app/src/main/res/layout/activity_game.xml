<?xml version="1.0" encoding="utf-8"?>


<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/playlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:background="#d5d2d2"
    android:columnCount="6"
    android:columnOrderPreserved="true"
    android:orientation="vertical"
    android:rowCount="3"
    android:rowOrderPreserved="true"
    android:soundEffectsEnabled="true"
    android:useDefaultMargins="false">

    <Button
        android:id="@+id/saveButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_column="0"
        android:layout_row="0"
        android:background="@android:drawable/ic_menu_save" />

    <Button
        android:id="@+id/loadButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_column="1"
        android:layout_row="0"
        android:background="@android:drawable/ic_menu_upload" />

    <Button
        android:id="@+id/helpButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_column="3"
        android:layout_row="0"
        android:background="@android:drawable/ic_menu_help" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/settingsButton"
        android:layout_row="0"
        android:layout_column="2"
        android:background="@android:drawable/ic_menu_manage" />

    <Button
        android:id="@+id/revertButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_column="4"
        android:layout_row="0"
        android:background="@android:drawable/ic_menu_revert" />

    <conyashka.chess.board.Board
        android:id="@+id/board"
        android:layout_width="fill_parent"
        android:layout_height="409dp"
        android:layout_column="0"
        android:background="@drawable/plank"
        android:soundEffectsEnabled="true"
        android:layout_row="1"
        android:layout_columnSpan="6" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_column="0"
        android:text="Game Started \n"
        android:layout_row="2"
        android:layout_columnSpan="6"
        android:textColor="#000000"
        android:textAlignment="center" />


</GridLayout>